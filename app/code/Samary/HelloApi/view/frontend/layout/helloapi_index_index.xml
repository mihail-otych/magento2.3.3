<?xml version="1.0"?>
<page xmlns:xsi="//www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Knockout Js Testing Page</title>
    </head>
    <body>
        <referenceBlock name="content">
            <block class="Samary\HelloApi\Block\Hello" name="hello_api_block" template="Samary_HelloApi::hello.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="hello" xsi:type="array">
                                <item name="component" xsi:type="string">Samary_HelloApi/js/view/hello</item>
                                <item name="displayArea" xsi:type="string">hello</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>