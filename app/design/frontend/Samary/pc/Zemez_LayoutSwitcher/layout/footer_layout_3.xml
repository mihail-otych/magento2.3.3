<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="footer.grid-col1" remove="true" />

        <referenceContainer name="footer.grid-row">
            <container name="footer.static.block" htmlClass="col-l-4 col-xl-3" htmlTag="div" after="footer.grid-col4">
                <block class="Magento\Cms\Block\Block" name="footer_static_block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer_static_block</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

        <referenceContainer name="footer.grid-col5" htmlClass="col-xl-3" />
    </body>
</page>
