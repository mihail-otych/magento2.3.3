        <referenceContainer name="footer.grid-col1" htmlClass="col-xl-12" />
        <referenceContainer name="footer.grid-col1.wrapper" remove="true" />

        <referenceContainer name="footer.grid-col2" htmlClass="col-xl-12" />

        <referenceContainer name="footer.grid-col3" htmlClass="col-xl-12" />

        <referenceContainer name="footer.grid-col4" remove="true" />

        <referenceContainer name="footer.grid-col5.wrapper" htmlClass="footer-top" />
        <move element="footer.grid-col5.wrapper" destination="footer" before="-" />
